<div class="left">
	    <div class="right" style="clear: both; margin-top: 20px;">
        
		<% form_for(:order, @order, :url => { :controller => "ticketorders", :action => "new"}) do |f| %>
            <%= f.hidden_field(:ticket_id, :value => @ticket.id) %>
     		<%= f.submit  t("views.tickets.show.s11"), :class => "submit_b" %>
		<% end %>
		</div>
		<div class="right" style="clear: both; margin-top: 5px;">
		 <% if logged_in? %>
            <% if @ticket.event.user.id == self.current_user.seller.id %>
          
                    <%= button_to t("views.tickets.show.s13"), edit_ticket_path(@ticket), :method => :get, :class => "submit_b_neutral" %>
            
            <% end %>
            <% end %>
		
    </div>
	</div>

