                        </tr>
                        <tr>
                            <td>
                                <%= link_to  t("views.listings.show.s41"), :controller => "shops", :action => "show", :id => @event.user.seller.id %>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
			 </table>
