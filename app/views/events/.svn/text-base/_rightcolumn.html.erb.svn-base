	      	<tr>
                <td class="bold" style="width: 120px;">
                    <%= t("views.events.show.s39")%>:
                </td>
			 </tr>	
            <tr>
                <td style="width: 100px;">
                    <%= link_to(image_tag("schmied.jpeg", :size => "100x100"), :controller => "shops", :action => "show", :id => @event.user.seller.id) %>
                </td>
                <td>
                    <table class="align_left" >
                        <tr>
