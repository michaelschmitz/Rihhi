<div class="left" style="float: left; clear: right; width: 350px; margin-top: 20px; ">
    <div style="margin-bottom: 15px;">
        <table style="padding-left: 10px;">
            <% if @event.tickets.length == 0 %>
            <tr>
                <td>
                    <% form_for(:ticket, :url => { :controller => "tickets", :action => "new"}) do |f| %>
                    <%= f.hidden_field(:event_id, :value => @event.id) %>
                    <%= f.submit "Add a ticket", :class => "submit_b_neutral" %>
                    <% end %>
                </td>
            </tr>
            <tr>
                <td class="bold align_center">
                    <%= t("views.events.show.s32")%>.
                </td>
            </tr>
            <% else %>
            <% if logged_in? %>
            <% if @event.user_id == self.current_user.id %>
            <tr>
                <td class="left">
                    <%= button_to  t("views.events.show.s33"), edit_event_path(@event), :method => :get, :class => "submit_b_neutral" %>
                </td>
            </tr>
            <tr>
                <td class="left">
                    <%= button_to t("views.events.show.s34"), new_ticket_path(:event_id => @event_id), :method => :get, :class => "submit_b_neutral" %>
                </td>
            </tr>
			   </table>
            <% end %>
            <% end %>
			
		</div>	
			<div class="corner_u_left">
    </div>
    <div class="background_grey" style="width: 330px; height: 10px; float: left; position: relative;">
    </div>
    <div class="corner_u_right">
    </div>
	
    <div class="align_left background_grey" style="float: left; clear:right; height: 400px; width: 350px; padding-bottom: 10px; border: 1px solid red;">
            <table style="padding-left: 10px;">
			<tr>
                <td class="bold">
                    <%=h @event.event_status %>
                </td>
            </tr>
            <% if @event.max_sc >= 0 %>
            <tr>
                <td>
                    <%=h @event.available_sc %> / <%=h @event.max_sc %> <%= t("views.events.show.s35")%> 
                </td>
            </tr>
            <% end %>
            <% if @event.max_nsc >= 0 %>
            <tr>
                <td>
                    <%=h @event.available_nsc %> / <%=h @event.max_nsc %> <%= t("views.events.show.s36")%>
                </td>
            </tr>
            <% end %>
            <% if @event.ticket_deadline != "" %>
            <tr>
                <td>
                    <%= t("views.events.show.s37")%> <%=h @event.ticket_deadline %>
                </td>
            </tr>
            <% end %>
            <tr>
                <td>
                    <a href="#tickets"><%= t("views.events.show.s38")%></a>
                </td>
            </tr>
            <% end %>
        </table>
    </div>	
    <div class="corner_l_left">
    </div>
    <div class="background_grey" style="width: 330px; height: 10px; float: left; position: relative;">
    </div>
    <div class="corner_l_right">
    </div
	
    <div class="align_left" style="float: left; clear:right; padding-bottom: 10px; margin-top: 10px; border-top: 1px solid #bbb; ">
