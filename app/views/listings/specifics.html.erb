                    <%= f.radio_button :safe_for_larp, 1, :checked => true, :tabindex => 1 %><%= t('views.listings.specifics.s11') %> <%= f.radio_button :safe_for_larp, 0, :tabindex => 2 %><%= t('views.listings.specifics.s12') %>
                </td>
                <td>
                    <%= f.radio_button :safe_for_reenactment, 1, :tabindex => 3 %><%= t('views.listings.specifics.s11') %> <%= f.radio_button :safe_for_reenactment, 0, :checked => true, :tabindex => 4 %><%= t('views.listings.specifics.s12') %>
                </td>
            </tr>
        </table>
        <!-- The description & support column-->
    </div>
    <div class="form_top form_bottom">
    </div>
    <div class="left" style="clear: left; margin-top: 20px;">
		<%= link_to t('views.listings.specifics.s13'), categories_path() %>
	</div>
	<div class="right" style="clear: right; margin-top: 20px;">
		<%= f.submit t('views.listings.specifics.s14'), :class => "submit_b" %>
    </div>
	<% end %>
</div>
